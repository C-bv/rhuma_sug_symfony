{% extends 'base.html.twig' %}

{% block title %}
	{{parent()}}
	- Account
{% endblock %}

{% block section %}
	<section id="account_section">
		<h1>Account</h1>
		<div id="form_container2">
			<form id="account_form" action="" method="post" autocomplete="off">
				<div>
					<div>User Information</div>
					<div id="edit_buttons_container">
						<span id="edit_button">Edit</span>
					</div>
				</div>
				<div>
					<div>
						<label for="nomClient">Last name</label>
						<input type="text" name="nomClient" disabled>
						<div class="invalid_input fade_in"><?= $nomClientErr; ?></div>
					</div>
					<div>
						<label for="prenomClient">First name</label>
						<input type="text" name="prenomClient" disabled>
						<div class="invalid_input fade_in"><?= $prenomClientErr; ?></div>
					</div>
				</div>
				<div>
					<div>
						<label for="emailClient">Email Address</label>
						<input type="text" name="emailClient" disabled>
						<div class="invalid_input fade_in"><?= $emailClientErr; ?></div>
					</div>
					<div>
						<label for="telClient">Phone Number</label>
						<input type="tel" name="telClient" disabled>
						<div class="invalid_input fade_in"><?= $telClientErr; ?></div>
					</div>
				</div>
				<div id="change_password_button">Change pass</div>
				<div>
					<div>Contact Information</div>
				</div>
				<div>
					<div>
						<label for="addresseClient">Address</label>
						<input type="text" name="addresseClient" disabled>
						<div class="invalid_input fade_in"><?= $addresseClientErr; ?></div>
					</div>
				</div>
				<div>
					<div>
						<label for="villeClient">City</label>
						<input type="text" name="villeClient" disabled>
						<div class="invalid_input fade_in"><?= $villeClientErr; ?></div>
					</div>
					<div>
						<label for="cpClient">Postal Code</label>
						<input type="text" name="cpClient" disabled>
						<div class="invalid_input fade_in"><?= $cpClientErr; ?></div>
					</div>
				</div>
			</form>
			<div id="password_change_modal" class="slide_delay1">
				<form id="change_password_form" action="" method="post" autocomplete="off">
					<div>
						<div id="close_modal_button">
							<i class="far fa-times"></i>
						</div>
						<div>Change your password</div>
					</div>
					<div>
						<label for="mdpClientNew">New Password</label>
						<input type="password" name="mdpClientNew">
						<div class="invalid_input fade_in"><?= $mdpClientNewErr; ?></div>
					</div>
					<div>
						<label for="mdpClientNewCheck">Confirm New Password</label>
						<input type="password" name="mdpClientNewCheck">
						<div class="invalid_input fade_in"><?= $mdpClientNewCheckErr; ?></div>
					</div>
					<input type="submit" value="Validate changes" name="submit_password_changes">
				</form>
			</div>
		</div>
	</section>
{% endblock %}

{% block body %}
    <script type="module" src="<?= MODULES ?>/_forms.js"></script>
{% endblock %}
