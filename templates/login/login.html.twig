{% extends 'base.html.twig' %}

{% block title %}
	{{parent()}}
	- Login
{% endblock %}

{% block section %}
	<section id="account_section">
		<h1>Log In</h1>
		<div id="form_container">
			<form id="login_form" action="{{ path('app_login') }}" method="post" autocomplete="off">
				<div>
					<input type="text" id="username" name="_username" value="{{ lastUsername }}" placeholder="Email"/>
				</div>
				<div>
					<input type="password" id="password" name="_password" placeholder="Password">
					{% if error %}
						<div class="invalid_input fade_in">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
					{% endif %}
				</div>
				<input type="submit" name="login" id="login_input" value="Login">
				<div>or</div>
				<a id="sign_up_button" href="register">Sign Up</a>
				<a href="blank">Forgot your password ?</a>
				{# If you want to control the URL the user is redirected to on success #}
				<input type="hidden" name="_target_path" value="/account"/>
			</form>
		</div>
	</section>
{% endblock %}
